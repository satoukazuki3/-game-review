<%= form_with model:review,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control review_title' %>
  </div>
  <div class="form-group">
    <%= f.label :記事 %>
    <%= f.text_area :article, class: 'form-control review_article' %>
  </div>
  <div class="form-group">
      <%= f.label :ジャンル, class: "col-2 control-label" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "--選択してください--"}, class: "col-3" %>
    </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
