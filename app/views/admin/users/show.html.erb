<div class='container m-5'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <div class="font-weight-bold bg-info"><%= @user.name %>さんの会員詳細</div>
        <table style="line-height:3rem">
         <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to "一覧へ戻る",admin_users_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>