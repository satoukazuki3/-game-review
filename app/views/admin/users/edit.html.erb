<div class="container">
  <div class="m-5">
    <h4><%= @user.name %>さんの会員情報編集</h4>
    <%= form_with model: @user,url: admin_customer_path(@user.id), local:true do |f| %>
    <form class="form-horizontal">
      <div class="form-group">
        <p class="col-2 control-label">会員ID<%= @user.id %></p>
      </div>
      <div class="form-group">
            <%= f.label :氏名, class: "col-2 control-label" %>
            <%= f.text_field :name, class: "col-3" %>
      </div>
      <div class="form-group">
            <%= f.label :メールアドレス, class: "col-2 control-label" %>
            <%= f.text_field :email, class: "col-3" %>
      </div>
      </form>
      <div class="form-group">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>
  </div>
</div>