<div class="container m-5">
  <h4 class="font-weight-bold bg-info">会員一覧</h4>
  <div class="row">
    <table class='table'>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
           <tr>
             <td class="text-dark"><%= user.id %></td>
             <td><%= link_to admin_user_path(user.id) do %>
               <%= user.name %>
               <% end %>
               </td>
             <td><%= user.email %></td>
             
           </tr>
        <% end %>
        <%= paginate @users %>
      </tbody>
    </table>
  </div>
</div>